# This affects HTTP only. HTTPS requires manual config.
# Most people want to use 80 here.
nginx_http_port: 80
uwsgi_module: '{{ app_package }}:{{ app_callable }}'
uwsgi_processes: 1
uwsgi_threads: 1
uwsgi_env: []
# Example for Django:
# uwsgi_env:
# - 'DJANGO_SETTINGS_MODULE={{ app_package }}.settings'
